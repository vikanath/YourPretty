<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/wd"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:src="@drawable/wd" />

    <ScrollView
        android:layout_marginTop="130dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollwd">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/wedding"
                android:layout_width="300dp"
                android:layout_height="360dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="50dp"
                android:src="@drawable/wd1" />

            <ImageView
                android:layout_below="@id/wedding"
                android:id="@+id/wedding2"
                android:layout_width="300dp"
                android:layout_height="360dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="50dp"
                android:src="@drawable/wd2" />

            <ImageView
                android:layout_below="@id/wedding2"
                android:id="@+id/wedding3"
                android:layout_width="300dp"
                android:layout_height="360dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="50dp"
                android:src="@drawable/wd3" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>

