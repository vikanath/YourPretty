<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dat"
        android:layout_margin="20dp"
        />

    <Button
        android:id="@+id/but2"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/tulisandate"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/but3"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBaseline="@+id/but2"
        android:layout_alignBottom="@+id/but2"
        android:layout_alignEnd="@+id/date"
        android:layout_alignRight="@+id/date" />
    <TextView
        android:id="@+id/tulisandate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/date"
        android:layout_alignLeft="@+id/date"
        android:layout_alignStart="@+id/date"
        android:layout_marginBottom="23dp"
        android:text="select date" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrolldate"
        android:layout_below="@id/date">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Beauty"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="20dp"
                />

            <TextView
                android:id="@+id/tglicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_centerHorizontal="true"
                android:text="Click The Icon"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tgl"
                android:layout_below="@id/bt_datepicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Date : "
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="20dp"
                />

            <Button
                android:id="@+id/bt_datepicker"
                android:layout_below="@+id/tglicon"
                android:background="@drawable/calendar"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:id="@+id/buttonselectdate"
        android:layout_below="@+id/tgl"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Select Date"
        android:layout_centerHorizontal="true"
        android:background="@color/black"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="50dp"
        />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
